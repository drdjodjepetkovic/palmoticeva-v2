rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // PUBLIC CONTENT: Allow anyone to read public content
    match /content/{document} {
      allow read: if true;
      // Allow admins to write
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }
    match /page_content/{document} {
        allow read: if true;
        allow write: if request.auth != null && isAdmin(request.auth.uid);
    }

    // USERS:
    // Users can read/update their own profile
    // Admins can read/write any user profile
    match /users/{userId} {
      allow read, update: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow create: if request.auth != null; // Allow user creation upon signup
      allow delete: if request.auth != null && isAdmin(request.auth.uid); // Only admins can delete users
    }

    // USER SUBCOLLECTIONS:
    // Users can manage their own subcollections
    // Admins can manage any user's subcollections
    match /users/{userId}/{collection}/{document=**} {
       allow read, write, delete: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
    }
    
    // AI CONVERSATIONS:
    // Only authenticated users can write their own conversations
    // Only admins can read all conversations
    match /ai_conversations/{conversationId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && isAdmin(request.auth.uid);
        allow write, delete: if false; // Nobody can update/delete
    }
  }
}
